<h1>New Question</h1>

<%= form_for @question do |f| %>
    <%if @question.errors.present?%>
        <p>
            <%= @question.errors.full_messages.join(', ') %>
        </p>
    <%end%>
    
    <div>
        <%= f.label(:title) %>
        <%= f.text_field(:title) %>
    </div>

    <div>
        <%= f.label(:body) %>
        <%= f.text_area(:body) %>
    </div>

    <%= f.submit %>
<% end %>